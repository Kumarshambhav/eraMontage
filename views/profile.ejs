<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="website icons" href="/public/images/WhatsApp Image 2024-08-29 at 01.47.24_e16105a3.jpg">
    <!-- Link to the CSS file -->
    <link rel="stylesheet" href="/stylesheet/profile.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar animate-slide-down">
        <div class="nav-container">
            <div class="logo">Era Montage</div>
            <div class="hamburger"><i class="fas fa-bars"></i></div>
            <ul class="nav-links">
                <li><a href="/feed">Home</a></li>
                <li><a href="/eventSubmission">EventSubmission</a></li>
                <li><a href="/UpcomingEvents">UpcomingEvents</a></li>
                <li><a href="/postFeed">PostFeed</a></li>
               
                <li><a href="/profile">Profile</a></li>
                <li><a href="/notifications">Notifications</a></li>
                <li><a href="/settings">Settings</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </div>
    </nav>

    <!-- Profile Container -->
    <div class="container">
        <div class="profile-header">
            <div class="profile-image">
                <img src="/images/profileImage/<%= user.profileImage %>" alt="Profile Image">
            </div>
            <div class="profile-info">
                <h1 class="profile-name animate-fade-in">@<%=user.username%></h1>
                <p class="profile-bio animate-fade-in">Bio</p>
                <div class="profile-actions">
                    <a href="/editProfile" class="action-btn edit-profile-btn"><i class="fa-solid fa-pen"></i> Edit Profile</a>
                    <a href="/messages" class="action-btn message-btn"><i class="fa-solid fa-envelope"></i> Message</a>
                </div>
            </div>
        </div>

        <!-- Posts Section -->
        <div class="feed-container">
            <h1 class="section-title animate-fade-in">Your Posts</h1>
            <div class="feed animate-slide-up">
                <!-- Example of a post -->
                <% profile.forEach(function(post){%>
                    <div class="post">
                        <img src="/images/uploads/<%= post.postImage %>" alt="">
                        <p style="color:red;">@<%= post.user.username %></p>
                        <p style="color:blue"><%= new Date(post.date).toLocaleString('en-US', { weekday: 'long', hour: '2-digit', minute: '2-digit' }) %></p>
                        <h2 class="post-title"><%= post.title %></h2>
                        <p class="post-content"><%= post.content %></p>
                        <!-- Post interactions -->
                        <div class="post-actions">
                            <button class="action-btn like-btn"><i class="fa-solid fa-thumbs-up"></i> Like</button>
                            <button class="action-btn dislike-btn"><i class="fa-solid fa-thumbs-down"></i> Dislike</button>
                            <button class="action-btn comment-btn"><i class="fa-solid fa-comment"></i> Comment</button>
                        </div>
                    </div>
                    <%})%>
                <!-- Add more posts as needed -->
            </div>
        </div>
    </div>
    <script>
        document.querySelector('.hamburger').addEventListener('click', function() {
            var navLinks = document.querySelector('.nav-links');
            
            // Toggle the active class
            navLinks.classList.toggle('active');
            
            // Adjust max-height based on whether the menu is open or closed
            if (navLinks.classList.contains('active')) {
                navLinks.style.maxHeight = navLinks.scrollHeight + "px"; // Set max-height to actual height
            } else {
                navLinks.style.maxHeight = null; // Reset max-height to enable smooth closing
            }
        });
    </script>
</body>
</html>
