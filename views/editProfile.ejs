<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <!-- Link to the CSS file -->
    <link rel="stylesheet" href="/stylesheet/feed.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar animate-slide-down">
        <div class="nav-container">
            <div class="logo">Era Montage</div>
            <ul class="nav-links">
                <li><a href="/feed">Home</a></li>
                <li><a href="/eventSubmission">Event Submission</a></li>
                <li><a href="/UpcomingEvents">Upcoming Events</a></li>
                <li><a href="/postFeed">Post Feed</a></li>
                <li><a href="/profile">Profile</a></li>
                <li><a href="/notifications">Notifications</a></li>
                <li><a href="/settings">Settings</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </div>
    </nav>

    <!-- Edit Profile Container -->
    <div class="container">
        <div class="form-container">
            <h1 class="title">Edit Profile</h1>
            <form action="/updateProfile" method="POST" enctype="multipart/form-data">
                <!-- Username Field -->
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" value="<%=user.username%>" required>
                </div>

                <!-- Profile Image Field -->
                <div class="form-group">
                    <label for="profileImage">Profile Image</label>
                    <input type="file" id="profileImage" name="profileImage" accept="image/*">

                </div>

                <!-- Bio Field -->
                <div class="form-group">
                    <label for="bio">Bio</label>
                    <textarea id="bio" name="bio" rows="4"></textarea>user bio
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn">Update Profile</button>
            </form>
        </div>
    </div>

    <script>
        document.querySelector('.hamburger').addEventListener('click', function() {
            var navLinks = document.querySelector('.nav-links');
            
            // Toggle the active class
            navLinks.classList.toggle('active');
            
            // Adjust max-height based on whether the menu is open or closed
            if (navLinks.classList.contains('active')) {
                navLinks.style.maxHeight = navLinks.scrollHeight + "px"; // Set max-height to actual height
            } else {
                navLinks.style.maxHeight = null; // Reset max-height to enable smooth closing
            }
        });
    </script>
</body>
</html>
